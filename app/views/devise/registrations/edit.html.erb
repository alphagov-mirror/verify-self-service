<h1 class="govuk-heading-l">Edit <%= resource_name.to_s.humanize %></h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="govuk-accordion" data-module="govuk-accordion" id="accordion-default">
    <div class="govuk-accordion__section ">
      <div class="govuk-accordion__section-header">
        <h2 class="govuk-accordion__section-heading">
          <span class="govuk-accordion__section-button" id="accordion-default-heading-1">
            Update Profile
          </span>
        </h2>
      </div>
      <div id="accordion-default-content-1" class="govuk-accordion__section-content" aria-labelledby="accordion-default-heading-1">
        <div class="govuk-form-group">
          <%= f.label :given_name, class: "govuk-label" %>
          <%= f.text_field :given_name, autocomplete: "given-name", value: @user.given_name, class: "govuk-input" %>
        </div>
        <div class="govuk-form-group">
          <%= f.label :family_name, class: "govuk-label" %>
          <%= f.text_field :family_name, autocomplete: "family-name", value: @user.family_name, class: "govuk-input" %>
        </div> 
        <div class="govuk-form-group">
          <%= f.label :email, "Email address", class: "govuk-label" %>
          <%= f.email_field :email, autocomplete: "email", value: @user.email, class: "govuk-input" %>
        </div>
        <div class="govuk-form-group">
          <%= f.label :phone_number, class: "govuk-label" %>
          <%= f.telephone_field :phone_number, autocomplete: "phone-number", value: @user.phone_number, class: "govuk-input" %>
        </div>
      </div>
    </div>
    <% if ENV["RAILS_ENV"] == "development" %>
      <div class="govuk-accordion__section ">
        <div class="govuk-accordion__section-header">
          <h2 class="govuk-accordion__section-heading">
            <span class="govuk-accordion__section-button" id="accordion-default-heading-2">
              Development Options
            </span>
          </h2>
        </div>
        <div id="accordion-default-content-2" class="govuk-accordion__section-content" aria-labelledby="accordion-default-heading-2">
          <div class="govuk-form-group">
            <%= f.label :user_id, "User ID", class: "govuk-label" %>
            <%= f.text_field :user_id, autocomplete: "user_id", value: @user.user_id, class: "govuk-input" %>
          </div>
          <div class="govuk-form-group">
            <%= f.label :roles, class: "govuk-label" %>
            <%= f.text_field :roles, autocomplete: "roles", value: @user.roles, class: "govuk-input" %>
          </div>
          <%= f.hidden_field :session_only, value: "true" %>
        </div>
    <% end %>
    <div class="govuk-accordion__section ">
      <div class="govuk-accordion__section-header">
        <h2 class="govuk-accordion__section-heading">
          <span class="govuk-accordion__section-button" id="accordion-default-heading-2">
            Change Password
          </span>
        </h2>
      </div>
      <div id="accordion-default-content-2" class="govuk-accordion__section-content" aria-labelledby="accordion-default-heading-2">
        <div class="govuk-form-group">
          <%= f.label :password, class: "govuk-label"%> <i>(leave blank if you don't want to change it)</i>
          <%= f.password_field :password, autocomplete: "new-password", class: "govuk-input" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>
        <div class="govuk-form-group">
          <%= f.label :password_confirmation, class: "govuk-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "govuk-input" %>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="govuk-form-group">
    <%= f.label :current_password, class: "govuk-label" %> <i>(we need your current password to confirm your changes)</i>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "govuk-input" %>
  </div>

  <a href="/profile" class="govuk-button govuk-button--secondary">Cancel</a>
  <%= f.submit "Update Profile", class: "govuk-button" %>
<% end %>

<h1 class="govuk-heading-l">Cancel my account</h1>

<p class="govuk-body">Unhappy?</p>
<%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "govuk-button govuk-button--warning" %>

<p class="govuk-body"><%= link_to "Back", :back %></p>
