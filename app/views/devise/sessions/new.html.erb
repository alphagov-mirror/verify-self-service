  <% if session[:challenge_name].present? %>
    <h2 class="govuk-heading-l">Log in - One Time Password Request</h2>

    <p class="govuk-body-l">Please enter your one time code from
    <%= session[:challenge_parameters]["FRIENDLY_DEVICE_NAME"] %>.</p>

    <%= form_for(TotpForm.new, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="govuk-form-group">
        <%= f.label :totp_code, class: "govuk-label" %>
        <%= f.text_field :totp_code, autofocus: true, class: "govuk-input" %>
        <%= f.hidden_field :email, value: session[:username] %>
        <%= f.hidden_field :cognito_session_id, value: session[:cognito_session_id] %>
        <%= f.hidden_field :challenge_parameters, value: session[:challenge_parameters] %>
      </div>

      <div class="actions">
        <%= f.submit "Log in", class: "govuk-button" %>
      </div>
    <% end %>
  <% else %>
    <h2 class="govuk-heading-l">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="govuk-form-group">
        <%= f.label :email, class: "govuk-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "govuk-input" %>
      </div>

      <div class="govuk-form-group">
        <%= f.label :password, class: "govuk-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "govuk-input" %>
      </div>

      <div class="actions">
        <%= f.submit "Log in", class: "govuk-button" %>
      </div>
    <% end %>
<% end %>

<%= render "devise/shared/links" %>
