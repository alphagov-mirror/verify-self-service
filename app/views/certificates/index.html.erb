<h1>Certificates#index</h1>
<p>Find me in app/views/certificates/index.html.erb</p>

<table class="govuk-table">
  <h3 class="govuk-heading-m">Uploaded certificates</h3>
  <thead class="govuk-table__head">
    <tr class="govuk-table__row">
      <th class="govuk-table__header" scope="col">Usage</th>
      <th class="govuk-table__header" scope="col">Value</th>
    </tr>
  </thead>
  <tbody class="govuk-table__body">
    <% for upload in @uploads.reverse %>
      <tr class="govuk-table__row">
        <th class="govuk-table__header" scope="row"><%= upload.usage %></th>
        <td class="govuk-table__cell"><%= upload.value %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to('Upload a certificate', upload_path, {class:  "govuk-button govuk-button--start", role: 'button', draggable: 'false'}) %>
