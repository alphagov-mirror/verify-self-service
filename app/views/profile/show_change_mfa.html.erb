<%= page_title t('profile.mfa_warning.title') %>

<%= form_for @form, url: update_mfa_post_path do |f| %>
  <%= render "shared/mfa_enrolment", f:f %>
  <%= f.submit t('profile.confirm'), class: "govuk-button govuk-!-margin-right-1", data: { module: "govuk-button" } %>
  <% unless flash[:retry].nil? %><%= link_to t('profile.new_code'), request_new_code_path, class: "secondary-link", data: { module: "govuk-button" } %><% end %>
  <%= link_to t('sign_in.cancel'), profile_path, class: "secondary-link", data: { module: "govuk-button" } %>
<% end %>