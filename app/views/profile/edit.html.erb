<h1  class="govuk-heading-l">Edit Profile</h1>

<div>
  <h2 class="govuk-heading-m">New Profile Data:</h2>
  <%= form_for @user, url: profile_edit_path, as: :profile do |f| %>
  <div class="govuk-form-group">
      <%= f.label :user_id, "User ID", class: "govuk-label" %>
      <% if @user.user_id == '00000000-0000-0000-0000-000000000000' %>
        <%= f.text_field :user_id, value: @user.user_id,  class: "govuk-input" %>
      <% else %>
        <%= f.text_field :user_id, value: @user.user_id, disabled: true, 
        class: "govuk-input govuk-input--disabled", 
        style: "background-color: #f3f2f1; border: 2px solid #6f777b" %>
      <% end %>
  </div>
  <div class="govuk-form-group">
    <%= f.label :given_name, class: "govuk-label" %>
    <%= f.text_field :given_name, autocomplete: "given-name", value: @user.given_name, class: "govuk-input" %>
  </div>
  <div class="govuk-form-group">
    <%= f.label :family_name, class: "govuk-label" %>
    <%= f.text_field :family_name, autocomplete: "family-name", value: @user.family_name, class: "govuk-input" %>
  </div> 
  <div class="govuk-form-group">
    <%= f.label :organisation, class: "govuk-label" %>
    <%= f.text_field :organisation, value: @user.organisation, class: "govuk-input" %>
  </div> 
  <div class="govuk-form-group">
    <%= f.label :email, "Email address", class: "govuk-label" %>
    <%= f.email_field :email, autocomplete: "email", value: @user.email, class: "govuk-input" %>
  </div>
  <div class="govuk-form-group">
    <%= f.label :phone_number, class: "govuk-label" %>
    <%= f.telephone_field :phone_number, autocomplete: "phone-number", value: @user.phone_number, class: "govuk-input" %>
  </div>
  <div class="govuk-form-group">
    <%= f.label :roles, class: "govuk-label" %>
    <%= f.text_field :roles, value: @user.roles.join(","), class: "govuk-input" %>
  </div>
  <a href="/profile" class="govuk-button govuk-button--secondary">Cancel</a>
  <%= f.submit "Update Profile", class: "govuk-button" %>
  <% end %>
  
  
</div>
