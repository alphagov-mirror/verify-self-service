<h1  class="govuk-heading-l">User Profile</h1>

<div>
  <h2  class="govuk-heading-m">Welcome <%= @user.full_name %></h2>

  <h3 class="govuk-heading-m">Profile:</h3>
  <p class="govuk-body">User ID: <%= @user.user_id %></p>
  <p class="govuk-body">Given Name: <%= @user.given_name %></p>
  <p class="govuk-body">Family Name: <%= @user.family_name %></p>
  <p class="govuk-body">Roles: <%= @user.roles %></p>
  <p class="govuk-body">E-mail address: <%= @user.email %></p>
  <p class="govuk-body">Phone number: <%= @user.phone_number %></p>
  <%= link_to "Edit Profile", edit_user_registration_path, class: "govuk-button" %>
</div>
