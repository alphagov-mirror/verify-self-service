<h2 class="govuk-heading-l">SP Components</h2>
<% if @sp_components.present? %>
  <table class="govuk-table">
    <thead class="govuk-table__head">
      <tr class="govuk-table__row">
        <th class="govuk-table__header" scope="col">Name</th>
        <th class="govuk-table__header" scope="col">Type</th>
        <th class="govuk-table__header" scope="col">View</th>
      </tr>
    </thead>
    <tbody class="govuk-table__body">
      <% @sp_components.reverse.each do |component| %>
        <tr class="govuk-table__row">
          <td class="govuk-table__cell" scope="row"><%= component.name %></td>
          <td class="govuk-table__cell">
            <%= component.view_component_type(component.vsp) %>
          </td>
          <td class="govuk-table__cell"><%= link_to 'View component', sp_component_path(component) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to 'Create new SP component', new_sp_component_path, class: "govuk-button govuk-button--start", data: { module: "govuk-button" }, role:"button", draggable:"false" %>
